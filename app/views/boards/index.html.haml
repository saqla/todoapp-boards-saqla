.container
  %h1.page__ttl All Boards
  .boards
    - @boards.each do |board|
      = link_to board_path(id: board.id) do
        .boards__wrapper.d-f
          .boards__wrapper__txt
            %p.boards__wrapper__txt__ttl
              = board.title
            %p.boards__wrapper__txt__content
              = board.content
          .boards__wrapper__dropdown.dropdown
            = image_tag 'Combined-Shape.png', class: 'cbd-shp'
            .dropdown-content
              = link_to 'Edit', edit_board_path(id: board.id)
              = link_to 'Delete', board_path(id: board.id), data: { method: 'delete' }
          .boards__wrapper__opt
            .boards__wrapper__opt__avtImg
              = image_tag 'Oval-male.png', class: 'user-avt-img'
    .mk-new
      = link_to new_board_path do
        %p + Add new board
